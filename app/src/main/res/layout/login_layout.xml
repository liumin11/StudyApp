<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <ImageView
        android:layout_marginTop="60dp"
        android:id="@+id/login_image"
        android:layout_width="144dp"
        android:layout_height="150dp"
        android:src="@mipmap/ee"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/login_tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="教育"
        android:layout_marginTop="0dp"
        android:textSize="26sp"
        android:gravity="center"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="65dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/name_image"
            android:layout_width="55dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/loginnm"
            />

        <EditText
            android:id="@+id/nametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="55dp"
            android:layout_marginRight="30dp"
            android:hint="@string/login_nm"
            android:inputType="number"
            android:theme="@style/myedit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/passw_image"
            android:layout_width="55dp"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/loginpw" />

        <EditText
            android:id="@+id/passwtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:hint="@string/login_pw"
            android:inputType="textPassword"
            android:theme="@style/myedit"
            />
    </LinearLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:background="@drawable/bt_login_shape"
        android:text="登录"
        android:textColor="#000"
        android:textSize="18sp"
        />

</LinearLayout>
