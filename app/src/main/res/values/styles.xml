<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colortheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="myedit" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/colortheme</item>
        <item name="colorControlActivated">@color/colortheme</item>
    </style>

    <style name="ThemeDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/colortheme</item>
        <item name="android:colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:colorPrimaryDark">@color/colorAccent</item>
    </style>



</resources>
